<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/styles/Positions.css" />
  <link rel="stylesheet" href="/styles/Banner.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="https://cdn.datatables.net/2.1.2/css/dataTables.dataTables.css">
  <script defer src="https://code.jquery.com/jquery-3.7.1.js"></script>
  <script defer src="https://cdn.datatables.net/2.1.2/js/dataTables.js"></script>
  <script defer src="/js/toggleDropdown.js" defer></script>
  <script defer src="/js/script.js"></script>

  <title>Investify</title>
</head>

<body>
  <%- include("partials/header.ejs") %>

    <table id="userPositionTable" class="" style="width:100%">

      <thead>
        <div id="positionEntries">
          <h6>My Positions
            <% if(locals.positionData){ %>
              (<%= positionData.length %>)
                <%}%>
          </h6>
        </div>

        <tr>
          <th id="headerCells">Identifier</th>
          <th id="headerCells">Name</th>
          <th id="headerCells">Price</th>
          <th id="headerCells">Type</th>
          <th id="headerCells">Unrealized Gain / Loss</th>
          <th id="headerCells">Realized Gain / Loss</th>
          <th id="headerCells" style="text-align: center;">Actions</th>
        </tr>
      </thead>
      <tbody>

        <% if(locals.positionData){ %>
          <% positionData.forEach((item)=> { %>

            <tr id="positionRow">

              <td data-cell="identifier" id="identifier">
                <a href="" id="identifierLink">
                  <%= item.identifier %>
                </a>
              </td>

              <td data-cell="name" id="name">
                <%= item.name %>
              </td>

              <td data-cell="price" id="price">
                <%= item.price %>
              </td>

              <td data-cell="type" id="type">
                <%= item.type %>
              </td>

              <td data-cell="unrealized" id="unrealized">
                <% if(item.unrealized_gains> 0){ %>
                  <span style="color: #009900;">+<%= item.unrealized_gains%>%<i class="fa-solid fa-arrow-trend-up"></i>
                  </span>
                  <% } else if (item.unrealized_gains < 0){ %>
                    <span style="color: #CC0000;">
                      <%= item.unrealized_gains%>%<i class="fa-solid fa-arrow-trend-down"></i>
                    </span>
                    <% } else { %>
                      <span>
                        <%= item.unrealized_gains %>
                      </span>
                      <% } %>
              </td>

              <td data-cell="realized" id="realized">
                <% if(item.realized_gains> 0){ %>
                  <span style="color: #009900;">+<%= item.realized_gains%>%<i class="fa-solid fa-arrow-trend-up"></i>
                  </span>
                  <% } else if (item.realized_gains < 0){ %>
                    <span style="color: #CC0000;">
                      <%= item.realized_gains%>%<i class="fa-solid fa-arrow-trend-down"></i>
                    </span>
                    <% } else { %>
                      <span>
                        <%= item.realized_gains %>
                      </span>
                      <% } %>
              </td>

              <td data-cell="actions" id="action">
                <button popovertarget="modal" id="actionButton">
                  Buy
                </button>

                <div id="modal" popover>
                  <button popovertarget="modal" popovertargetaction="hide"
                    style="position: absolute; top: 0; right: 0;">X</button>
                  <input type="button" value="Buy">
                  <input type="button" value="Sell">
                  <input type="button" value="Sell All">
                </div>
              </td>

            </tr>

            <% }) %>
              <% } %>

      </tbody>
    </table>
</body>

</html>